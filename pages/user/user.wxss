page {
	background: var(--gray-20);
	display: flex;
	flex-direction: column;
}

page::before {
	content: "";
	width: 750rpx;
	height: 200rpx;
	background: var(--blue-50);
	position: absolute;
	z-index: -1;
	border-radius: 0 0 10rpx 10rpx;
}

.login {
	display: flex;
	flex-direction: column;
	align-items: center;
	height: 250rpx;
	margin: 50rpx 20rpx 0;
	background: var(--gray-10);
	border-radius: 10rpx;
	box-shadow: 5rpx 5rpx 10rpx var(--gray-60);
}

.login-img {
	position: relative;
	top: -50rpx;
	border-radius: 50%;
	height: 100rpx;
	width: 100rpx;
}

.login-title {
	font-size: large;
	margin: 0 0 20rpx;
}

.login-subtitle {
	font-size: 30rpx;
	color: var(--gray-70);
}

.options {
	display: flex;
	flex-direction: column;
	padding: 0 20rpx;
	margin-top: 20rpx;
}

.option-item {
	height: 80rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
}

.option-item-title {
	flex: 1;
}

.option-item-tel {
	font-size: small;
	color: var(--gray-80);
}

.option-item-img {
	width: 40rpx;
	height: 40rpx;
	color: var(--gray-80);
}
